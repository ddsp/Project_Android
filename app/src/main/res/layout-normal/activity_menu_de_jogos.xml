<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.pap.mddsp.gameconsole.MenuDeJogos"
    android:background="#000000">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/layout_game"
        android:visibility="visible"
        android:orientation="vertical">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginLeft="215dp"
            android:text="@string/button_send"/>

        <TextView
            android:id="@+id/username"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginLeft="200dp"
            android:visibility="gone"
            android:textColor="#E2DC06"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <Button
            android:id="@+id/Sairrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:visibility="gone"
            android:text="@string/Exit"/>

        <ImageView
            android:id="@+id/imgM"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/mail_img"
            android:visibility="gone"/>

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_marginTop="60dp"
            android:layout_height="390dp"
            android:columnCount="2">
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="50dp"
                android:onClick="entrar_jogo"
                android:src="@drawable/pingpong_icon"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:contentDescription="@string/Error"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:onClick="entrar_jogo"
                android:src="@drawable/brickbreacker_icon"
                android:scaleType="fitXY"
                android:contentDescription="@string/Error"/>
        </GridLayout>
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:visibility="gone"
        tools:context=".MainMenu">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/user"
                android:text="@string/user"
                android:textColor="#E2DC06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <EditText
                android:id="@+id/TextUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:textColor="#E2DC06"
                android:inputType="text"
                android:background="@drawable/cell_shape"
                android:ems="10"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_toRightOf="@+id/user"
                android:layout_toEndOf="@+id/user">
            </EditText>

            <TextView
                android:id="@+id/pass"
                android:text="@string/pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textColor="#E2DC06"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <EditText
                android:id="@+id/TextPass"
                android:layout_toRightOf="@+id/pass"
                android:layout_toEndOf="@+id/pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:textColor="#E2DC06"
                android:background="@drawable/cell_shape"
                android:inputType="textPassword"
                android:ems="10"
                android:textAppearance="?android:attr/textAppearanceMedium">
            </EditText>
        </RelativeLayout>

        <Button
            android:id="@+id/Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@+id/RegistarA"
            android:layout_toEndOf="@+id/RegistarA"
            android:text="@string/button_send" />

        <Button
            android:id="@+id/RegistarA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="140dp"
            android:visibility="visible"
            android:text="@string/Regist" />

        <TextView
            android:id="@+id/Tent"
            android:textColor="#E2DC06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="200dp"
            android:visibility="visible"
            android:text="@string/atemps"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/attemps"
            android:textColor="#E2DC06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="155dp"
            android:layout_marginStart="155dp"
            android:layout_marginTop="201dp"
            android:visibility="visible"
            android:text="@string/tent"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/Sair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="240dp"
            android:text="@string/Exit" />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/registo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:visibility="gone"
        tools:context=".MainMenu">


        <TextView
            android:id="@+id/userr"
            android:text="@string/user"
            android:textColor="#E2DC06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <EditText
            android:id="@+id/TextUserr"
            android:textColor="#E2DC06"
            android:background="@drawable/cell_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:inputType="text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_toRightOf="@+id/userr"
            android:layout_toEndOf="@+id/userr">
        </EditText>

        <TextView
            android:id="@+id/passr"
            android:text="@string/pass"
            android:textColor="#E2DC06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <EditText
            android:id="@+id/TextPassr"
            android:textColor="#E2DC06"
            android:background="@drawable/cell_shape"
            android:layout_toRightOf="@+id/passr"
            android:layout_toEndOf="@+id/passr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:inputType="textPassword"
            android:ems="10"
            android:textAppearance="?android:attr/textAppearanceMedium">
        </EditText>

        <TextView
            android:id="@+id/mailr"
            android:text="@string/EmailL"
            android:textColor="#E2DC06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <EditText
            android:id="@+id/TextMailr"
            android:textColor="#E2DC06"
            android:background="@drawable/cell_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="145dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:inputType="text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_toRightOf="@+id/userr"
            android:layout_toEndOf="@+id/userr">
        </EditText>

        <Button
            android:id="@+id/Registar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="190dp"
            android:visibility="visible"
            android:text="@string/Regist" />

        <Button
            android:id="@+id/Sairr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:visibility="visible"
            android:text="@string/Exit" />

    </RelativeLayout>
</FrameLayout>
