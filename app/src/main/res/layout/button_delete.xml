<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"  android:layout_height="match_parent" android:layout_width="match_parent">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#f00" />
            <stroke
                android:width="2dp"
                android:color="#f00" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>

    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#f00"
                android:endColor="#f00"
                android:angle="270" />
            <stroke
                android:width="9dp"
                android:color="#f00" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>